@model IEnumerable<CST_323_MilestoneApp.Models.Book>



@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>


<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Published Date</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.title)</td>
                <td>@Html.DisplayFor(modelItem => item.Author.name)</td>
                <td>@Html.DisplayFor(modelItem => item.isbn)</td>
                <td>@Html.DisplayFor(modelItem => item.published_date)</td>
                <td>@Html.DisplayFor(modelItem => item.genre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.book_id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.book_id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.book_id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

